 
#include <bits/stdc++.h>
using namespace std;

// very useful for combo problems


// perform some operation on each permutation, ex: check if it satisfies some condition 
// in this case it just prints
void process(int a[], int n)
{
    for (int i = 0; i < n; i++) {
        cout << a[i] << "  ";
    }
    cout << endl;
}
  
void findPermutations(int a[], int n)
{
  
    sort(a, a + n);
  
    cout << "Possible permutations are:\n";
    do {
        process(a, n);
    } while (next_permutation(a, a + n));
}
  
int main()
{
    
    int a[] = { 1, 2, 3, 4 }; // these are the numbers to permutate
  
    int n = sizeof(a) / sizeof(a[0]);
  
    findPermutations(a, n);
  
    return 0;
}
